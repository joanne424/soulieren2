    <Style x:Key="WindowDialog" TargetType="{x:Type Window}">
        <Setter Property="ResizeMode" Value="CanMinimize"/>
        <Setter Property="AllowsTransparency" Value="True"/>
        <Setter Property="WindowStyle" Value="None" />
        <Setter Property="ResizeMode" Value="NoResize"   />
        <!--<Setter Property="Topmost" Value="true"/>-->
        <Setter Property="Width" Value="770"/>
        <Setter Property="Height" Value="700"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="#FF333333"/>
        <Setter Property="FontFamily" Value="Arial"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate   TargetType="{x:Type Window}">
                    <!--设置BORDER的StyleSkinBorder -->
                    <Border Padding="2" >
                        <Border CornerRadius="4,4,3,3" Background="#EDEDED"
                     BorderBrush="#999999"
                    BorderThickness="1">
                            <!--边框的阴影-->
                            <Border.Effect>
                                <DropShadowEffect Color="#6e6e6e"
                                      BlurRadius="5"
                                      ShadowDepth="0"
                                      Opacity="0.6" />
                            </Border.Effect>
                            <Grid >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="32" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="40" />
                                </Grid.RowDefinitions>

                                <Border Grid.ColumnSpan="2" CornerRadius="4,4,0,0" BorderBrush="#747474">

                                    <Border.Background>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="#FFFFFF" Offset="0.040"/>
                                            <GradientStop Color="#E4E4E4" Offset="0.05"/>
                                            <GradientStop Color="#C5C5C5" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                                <!--标题栏样式-->
                                <Grid x:Name="WindowHeader"  Grid.Row="0">
                                    <DockPanel>
                                        <Button   Cursor="Hand"   Margin="0,0,6,0"   WindowChrome.IsHitTestVisibleInChrome="True" cal:Message.Attach="[Event Click] = [Action TryClose(false)]"  Width="18" Height="18"  DockPanel.Dock="Right">
                                            <Button.Template>
                                                <ControlTemplate TargetType="{x:Type Button}">
                                                    <Border>
                                                        <Image Name="tgImg" Width="11" Height="11"  Source="/Resources/Images/White/Window/normal.png" />
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver"   Value="True">
                                                            <Setter TargetName="tgImg" Property="Source" Value="/Resources/Images/White/Window/hover.png" />
                                                            <Setter Property="Width" TargetName="tgImg" Value="17"/>
                                                            <Setter Property="Height" TargetName="tgImg" Value="17"/>
                                                        </Trigger>
                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter TargetName="tgImg" Property="Source"  Value="/Resources/Images/White/Window/click.png" />
                                                            <Setter Property="Width" TargetName="tgImg" Value="17"/>
                                                            <Setter Property="Height" TargetName="tgImg" Value="17"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>

                                        <!--标题文字-->
                                        <TextBlock Text="{TemplateBinding Title}"  HorizontalAlignment="Left" VerticalAlignment="Center"
                                        FontSize="13" Margin="10,0"
                                        TextAlignment="Left"
                                        FontWeight="Bold" Foreground="#000000">
                                            <TextBlock.Effect>
                                                <DropShadowEffect BlurRadius="1" Direction="270" ShadowDepth="1" Color="White"/>
                                            </TextBlock.Effect>
                                        </TextBlock>
                                    </DockPanel>
                                </Grid>
                                <Border Grid.Row="2" CornerRadius="0,0,3,3" Margin="-1"
                            BorderThickness="1" Background="#E4E4E4"
                            BorderBrush="#999999" >
                                    <Rectangle Stroke="#FFFFFF" Height="1" VerticalAlignment="Top">
                                    </Rectangle>
                                </Border>
                                <Grid Grid.Row="1" Grid.RowSpan="2">
                                    <Rectangle Stroke="#FFFFFF" Height="1" VerticalAlignment="Top" />
                                    <ContentPresenter  Content="{TemplateBinding Content}"  Margin="0,1,0,0"/>
                                </Grid>
                            </Grid>
                        </Border>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

