        <Setter Property="IsReadOnly" Value="True" />
    </Style>-->
    <!--<Style TargetType="toolkit:VDDateTimePicker">
        <Setter Property="Language" Value="{Binding RunTime.CurLanguage}" />
    </Style>-->
</ResourceDictionary>