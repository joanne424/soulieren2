                                <ImageBrush ImageSource="/Resources/Images/White/ScrollBar/Slider_normal.png"
                                            RenderOptions.BitmapScalingMode="NearestNeighbor"
                                            Stretch="Fill">

                                </ImageBrush>
                            </Border.Background>
                        </Border>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="true">
                            <Setter TargetName="ThumborderVer"
                                    Property="Background">
                                <Setter.Value>
                                    <ImageBrush ImageSource="/Resources/Images/White/ScrollBar/Slider_hover.png"
                                                RenderOptions.BitmapScalingMode="NearestNeighbor"
                                                Stretch="Fill">

                                    </ImageBrush>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush EndPoint="1,0" StartPoint="0,0">
                                        <LinearGradientBrush.GradientStops>
                                            <GradientStopCollection>
                                                <GradientStop Color="#FFF" Offset="0.0"/>
                                                <GradientStop Color="#CCC" Offset="1.0"/>
                                            </GradientStopCollection>
                                        </LinearGradientBrush.GradientStops>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Background" TargetName="ThemBG">
                                <Setter.Value>
                                    <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0" SpreadMethod="Pad">
                                        <GradientStop Color="#DBEEFD" Offset="0.99"/>
                                        <GradientStop Color="#C4EEFF" Offset="0.93"/>
                                        <GradientStop Color="#9ED2FF" Offset="0.67"/>
                                        <GradientStop Color="#89C5FB" Offset="0.53"/>
                                        <GradientStop Color="#B9DAF9" Offset="0.47"/>
                                        <GradientStop Color="#A8D4F7" Offset="0.37"/>
                                        <GradientStop Color="#C6D9F9" Offset="0.18"/>
                                        <GradientStop Color="#DCF4FE" Offset="0.01"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="BorderBrush" TargetName="ThemBG">
                                <Setter.Value>
                                    <LinearGradientBrush EndPoint="0.5,1"  StartPoint="0.5,0">
                                        <GradientStop Color="#495c6b" Offset="0"/>
                                        <GradientStop Color="#5f6690" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>

                        </Trigger>
                        <Trigger Property="IsDragging"
                                 Value="true">
                            <Setter TargetName="ThumborderVer"
                                    Property="Background">
                                <Setter.Value>
                                    <ImageBrush ImageSource="/Resources/Images/White/ScrollBar/Slider_click.png"
                                                RenderOptions.BitmapScalingMode="NearestNeighbor"
                                                Stretch="Fill">

                                    </ImageBrush>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Background" TargetName="ThemBG">
                                <Setter.Value>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="#bad3fb" Offset="0.01"/>
                                        <GradientStop Color="#91b5e5" Offset="0.08"/>
                                        <GradientStop Color="#86ade6" Offset="0.18"/>
                                        <GradientStop Color="#67a6e8" Offset="0.43"/>
                                        <GradientStop Color="#59a5ee" Offset="0.44"/>
                                        <GradientStop Color="#4996e6" Offset="0.53"/>
                                        <GradientStop Color="#4794e4" Offset="0.68"/>
                                        <GradientStop Color="#89bfed" Offset="0.82"/>
                                        <GradientStop Color="#89bfed" Offset="0.93"/>
                                        <GradientStop Color="#FFB8CDEC" Offset="0.99"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="BorderBrush" TargetName="ThemBG">
                                <Setter.Value>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="#535c7d" Offset="1"/>
                                        <GradientStop Color="#394E6D" Offset="0"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>

                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
